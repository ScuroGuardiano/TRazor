@inherits TRazor.Core.TuiControlComponentBase
@implements TRazor.Core.ITuiTextControl

@ChildContent

@code {

    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    public void HandleTextUpdate(string text)
    {
        _label.Text = text;
    }

    private readonly Terminal.Gui.Views.Label _label = new();
    public override View View => _label;
}
